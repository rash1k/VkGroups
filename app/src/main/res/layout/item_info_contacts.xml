<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_contacts"
    android:background="@color/colorDefaultWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/rv_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="16dp"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/iv_contacts_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_box_black_36dp"/>
        <!--android:tint="@color/colorIcon"-->

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_contacts_icon"
            android:autoLink="web"
            android:text="@string/tv_contacts"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_contacts_icon"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

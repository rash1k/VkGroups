<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_attachment_audio"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/margin_material_design"
    android:layout_marginRight="@dimen/margin_material_design"
    android:layout_marginTop="@dimen/margin_material_design"
    android:background="@color/colorDefaultWhite"
    android:clipToPadding="false"
    card_view:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/iv_attachment_image_icon"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_attachment_image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_material_design"
            android:layout_marginStart="@dimen/margin_material_design"
            android:cropToPadding="false"
            android:tint="@color/accent"
            app:srcCompat="@drawable/ic_audio_track_black_36dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/iv_attachment_image_icon"
            android:layout_toRightOf="@id/iv_attachment_image_icon">

            <TextView
                android:id="@+id/tv_audio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:lines="1"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14sp"
                tools:text="Title"/>

            <TextView
                android:id="@+id/tv_audio_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_audio_name"
                android:lines="1"
                android:textSize="12sp"
                tools:text="Artist"/>

            <TextView
                android:id="@+id/tv_audio_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:textSize="12sp"
                tools:text="5:05"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>